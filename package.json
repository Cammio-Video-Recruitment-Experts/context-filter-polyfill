{
  "name": "context-filter-polyfill",
  "version": "0.2.4",
  "description": "Polyfills `CanvasRenderingContext2d.filter` capability of adopting CSS3 filters to canvas contexts at least partially.",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "index.html",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:davidenke/context-filter-polyfill.git"
  },
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev",
    "url": "http://www.davidenke.de"
  },
  "license": "MIT",
  "scripts": {
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --ci --runInBand --reporters=default --reporters=jest-junit",
    "build": "rollup --config --environment NODE_ENV:production",
    "start:build": "rollup --config --environment NODE_ENV:development --watch",
    "start:server": "http-server .",
    "start": "run-p start:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-terser": "0.4.0",
    "@rollup/plugin-typescript": "11.0.0",
    "@types/chrome": "0.0.213",
    "@types/jest": "29.4.0",
    "@types/puppeteer": "7.0.4",
    "http-server": "14.1.1",
    "jest": "29.4.3",
    "jest-canvas-mock": "2.4.0",
    "jest-junit": "6.3.0",
    "npm-run-all": "4.1.5",
    "puppeteer": "19.7.0",
    "rollup": "3.15.0",
    "ts-jest": "29.0.5",
    "tslint": "6.1.3",
    "typescript": "4.9.5"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "unit tests",
    "outputDirectory": "./reports",
    "outputName": "./junit.xml"
  }
}
