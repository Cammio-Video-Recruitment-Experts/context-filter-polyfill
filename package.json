{
  "name": "context-filter-polyfill",
  "version": "0.3.7",
  "description": "Polyfills `CanvasRenderingContext2d.filter` capability of adopting CSS3 filters to canvas contexts at least partially.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:davidenke/context-filter-polyfill.git"
  },
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev",
    "url": "http://www.davidenke.de"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --ci --runInBand --reporters=default --reporters=jest-junit",
    "prebuild": "rimraf dist",
    "build": "ts-node esbuild.config.ts",
    "start": "ts-node esbuild.config.ts --serve",
    "release": "release-it --ci --verbose"
  },
  "devDependencies": {
    "@types/chrome": "0.0.254",
    "@types/jest": "29.5.11",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "esbuild": "0.19.11",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "jest-canvas-mock": "2.5.2",
    "jest-environment-jsdom": "29.7.0",
    "jest-junit": "16.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.1",
    "release-it": "17.0.1",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "unit tests",
    "outputDirectory": "./reports",
    "outputName": "./junit.xml"
  }
}
