{
  "name": "context-filter-polyfill",
  "version": "0.3.3",
  "description": "Polyfills `CanvasRenderingContext2d.filter` capability of adopting CSS3 filters to canvas contexts at least partially.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "index.html",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:davidenke/context-filter-polyfill.git"
  },
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev",
    "url": "http://www.davidenke.de"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "test:ci": "npm test -- --ci --runInBand --reporters=default --reporters=jest-junit",
    "prebuild": "rimraf dist",
    "build": "ts-node esbuild.config.ts",
    "start": "ts-node esbuild.config.ts --serve",
    "release": "release-it --ci --verbose"
  },
  "devDependencies": {
    "@types/chrome": "0.0.213",
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "esbuild": "0.17.8",
    "eslint": "8.34.0",
    "jest": "29.4.3",
    "jest-canvas-mock": "2.4.0",
    "jest-environment-jsdom": "29.4.3",
    "jest-junit": "6.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "release-it": "15.6.0",
    "rimraf": "4.1.2",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "unit tests",
    "outputDirectory": "./reports",
    "outputName": "./junit.xml"
  }
}
